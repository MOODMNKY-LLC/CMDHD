{
  "name": "cmdhd-monorepo",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@9.9.0",
  "engines": {
    "node": ">=18.17.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "dev": "dotenv -e .env -- turbo run dev --parallel",
    "build": "dotenv -e .env -- turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "shadcn:boundaries": "pnpm -C apps/boundaries dlx shadcn@latest",
    "ci": "pnpm lint && pnpm typecheck && pnpm test"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "dotenv-cli": "^7.4.2",
    "eslint": "^9.9.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react-hooks": "^6.1.0",
    "prettier": "^3.3.3",
    "tailwindcss-animate": "^1.0.7",
    "turbo": "^2.0.0",
    "typescript": "^5.6.3",
    "vitest": "^3.2.4"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@cmdhd/config/eslint"
    ]
  },
  "prettier": "@cmdhd/config/prettier",
  "pnpm": {
    "overrides": {
      "tailwindcss": "3.4.17",
      "@tailwindcss/postcss": "npm:tailwindcss@3.4.17"
    }
  }
}